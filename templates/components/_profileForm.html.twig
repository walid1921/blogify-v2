            <div class="d-flex flex-column gap-5 w-50">
                {# Bio #}
                <div class="d-flex">
                    {{ form_row(formUserProfile.bio, {
                        row_attr: { class: 'form-row-inline' }
                    }) }}
                </div>

                {# Website + Country #}
                <div class="d-flex gap-3">
                    {{ form_row(formUserProfile.instagram, {
                        row_attr: { class: 'form-row-inline' }
                    }) }}

                    {{ form_row(formUserProfile.tiktok, {
                        row_attr: { class: 'form-row-inline' }
                    }) }}
                </div>

                {# Date of birth + country #}
                <div class="d-flex gap-3">

                    {{ form_row(formUserProfile.dateOfBirth, {
                        row_attr: { class: 'form-row-inline' }
                    }) }}


                    {{ form_row(formUserProfile.country, {
                        row_attr: { class: 'form-row-inline' }
                    }) }}
                </div>

                {# Submit #}
                <div class="d-flex flex-column gap-1">
                    {{ form_row(formUserProfile.save) }}
                </div>
            </div>

            {# avatar #}
            <div class="">
                <label class="profile-avatar-label">
                    {{ form_widget(formUserProfile.avatar, {
                        attr: { class: 'profile-avatar-input' }
                    }) }}

                    <div class="profile-avatar">
                        {% if user.profile.avatarPath is defined %}
                            <img src="{{ asset(user.profile.avatarPath) }}" alt="Avatar">
                        {% else %}
                            <span class="avatar-placeholder">
                                    <img
                                        src="https://api.dicebear.com/8.x/adventurer/svg?seed=your-custom-seed"
