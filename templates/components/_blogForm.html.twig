{#    {{ form(formBlog) }} #}
<div class="px-3 d-flex flex-column gap-4 justify-content-center align-items-center w-100 my-5">
    <div class="w-100 ">

        {# ‚ö†Ô∏è Keep novalidate=false so HTML5 validation also works #}
        {{ form_start(formBlog, {'attr': {'novalidate': true}}) }}

        {# üîπ Global form errors (e.g. if CSRF fails) #}
        {{ form_errors(formBlog) }}

        <div class="d-flex flex-column gap-4 w-100">


            {{ form_row(formBlog.coverImage, { row_attr: { class: 'form-row-inline' } }) }}

            <div class="form-inline-group">
                {{ form_row(formBlog.title, { row_attr: { class: 'form-row-inline' } }) }}
                {{ form_row(formBlog.readTime,  { row_attr: { class: 'form-row-inline' } }) }}
                {{ form_row(formBlog.blogLanguage,  { row_attr: { class: 'form-row-inline' } }) }}
            </div>


            <div class=" editorjs-holder-wrapper">
                <label for="editorjs-holder" class="editorjs-holder-label">Content *</label>
                <div id="editorjs-holder" class="editorjs-holder"></div>
                {{ form_widget(formBlog.content) }}
            </div>

            {# {{ form_row(formBlog.category) }} #}
            {{ form_row(formBlog.is_published) }}

            <div class="d-flex flex-column gap-1">
                <p class="text-secondary fs-7">You can save it now and edit it later</p>
                {{ form_row(formBlog.save) }}
            </div>


            {# {{ form_row(formBlog.content) }} #}


        </div>

        {{ form_end(formBlog) }}
    </div>
</div>
