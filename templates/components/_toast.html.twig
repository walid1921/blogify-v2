<div class="notification {{ type }}">
    <div class="icon {{ type }}">
        {% if type == 'success' %}
            <!-- Success Icon -->
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8.5 12.5L10.5 14.5L15.5 9.5" stroke="#1B8655" stroke-width="1.5" stroke-linecap="round"
                      stroke-linejoin="round"></path>
                <path
                    d="M7 3.33782C8.47087 2.48697 10.1786 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12C2 10.1786 2.48697 8.47087 3.33782 7"
                    stroke="#1B8655" stroke-width="1.5" stroke-linecap="round"></path>
            </svg>

        {% elseif type == 'error' %}
            <!-- Error Icon -->
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M14.5 9.50002L9.5 14.5M9.49998 9.5L14.5 14.5" stroke="#DB3545" stroke-width="1.5"
                      stroke-linecap="round"></path>
                <path
                    d="M7 3.33782C8.47087 2.48697 10.1786 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12C2 10.1786 2.48697 8.47087 3.33782 7"
                    stroke="#DB3545" stroke-width="1.5" stroke-linecap="round"></path>
            </svg>

        {% elseif type == 'warning' %}
            <!-- Warning Icon -->
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path
                    d="M6.30928 9C8.59494 5 9.96832 3 12 3C14.3107 3 15.7699 5.58716 18.6883 10.7615L19.0519 11.4063C21.4771 15.7061 22.6897 17.856 21.5937 19.428C20.4978 21 17.7864 21 12.3637 21H11.6363C6.21356 21 3.50217 21 2.40626 19.428C1.45498 18.0635 2.24306 16.2635 4.05373 13"
                    stroke="#FFC008" stroke-width="1.5" stroke-linecap="round"></path>
                <path d="M12 8V13" stroke="#FFC008" stroke-width="1.5" stroke-linecap="round"></path>
                <circle cx="12" cy="16" r="1" fill="#FFC008"></circle>
            </svg>

        {% elseif type == 'info' %}
            <!-- Info Icon -->
            <svg width="24" height="24" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 7.5V13.5" stroke="#212529" stroke-width="1.5" stroke-linecap="round"></path>
                <circle cx="12" cy="16.5" r="1" fill="#212529"></circle>
                <path
                    d="M7 3.83782C8.47087 2.98697 10.1786 2.5 12 2.5C17.5228 2.5 22 6.97715 22 12.5C22 18.0228 17.5228 22.5 12 22.5C6.47715 22.5 2 18.0228 2 12.5C2 10.6786 2.48697 8.97087 3.33782 7.5"
                    stroke="#212529" stroke-width="1.5" stroke-linecap="round"></path>
            </svg>

        {% endif %}
    </div>
    <p>{{ message }}</p>
</div>
