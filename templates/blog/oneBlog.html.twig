    <div class="page-container my-5">


        {# Breadcrumb #}
        {% block bread %}
            <nav aria-label="breadcrumb" class="d-none d-md-block">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('blog.allBlogs') }}">Blogs</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{ blog.title }}</li>
                </ol>
            </nav>
        {% endblock %}

        <h1 class="mb-4">{{ blog.title }}</h1>
        <p class="d-flex gap-1">Published: {{ include('blog/_blogDate.html.twig', { createdAt: blog.createdAt }) }}</p>

        {% if blog.coverImage %}
            <img src="{{ asset('uploads/blogs/' ~ blog.coverImage) }}"
                 alt="{{ blog.title }}"
                 class="img-fluid mb-3 rounded shadow-sm">
        {% endif %}


        <div class="js-blog-content" data-content='{{ blog.content|raw }}'></div>
    </div>



{% endblock %}
