{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('blog') }}" class="px-2 py-1 bg-green-300 border inline-block">Back</a>
    <h1>{{ one_blog.blogName }}</h1>
    <p>Author: {{ one_blog.author }}</p>
    <p>{{ one_blog.content }}</p>
    <p>Created at: {{ include('blog/_blogDate.html.twig', { blog_date: one_blog.created_at }) }}</p>
{% endblock %}
