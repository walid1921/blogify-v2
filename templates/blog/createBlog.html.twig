{% extends 'base.html.twig' %}

{% block title %}Create Blog{% endblock %}

{% block body %}

    <div class="page-container">

        <div class="d-flex flex-column gap-2 gap-md-4">
            <div class="padding-header">
                {% include 'components/_button.html.twig' with {
                    typeButton: 'secondary',
                    path: 'javascript:history.back()',
                    iconType: 'back',
                    iconColor: 'black',
                } %}
            </div>


            <div class="blog-header">
                <h1 class="text-uppercase">Create a New Blog Post</h1>
                <p class="fw-light">Start writing your amazing blog post</p>
            </div>
        </div>

        {{ include ('components/_blogForm.html.twig') }}
    </div>

{% endblock %}
