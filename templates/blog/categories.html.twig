{% extends 'base.html.twig' %}

{% block title %}Blog Categories{% endblock %}

{% block body %}

    <div class="page-container">


        <div class="d-flex flex-column gap-4 mb-4 px-4">
            <div class="d-flex justify-content-start">
                <div class=" mb-2">
                    {% include 'components/_button.html.twig' with {
                        typeButton: 'secondary',
                        path: 'javascript:history.back()',
                        iconType: 'back',
                        iconColor: 'black',
                    } %}
                </div>
            </div>

            <div class="d-flex align-items-end justify-content-between">
                <div class="d-flex flex-column gap-1">
                    <div class="d-flex align-items-start gap-2">
                        <h1 class="text-uppercase fs-3">CATEGORIES</h1>
                        <span>{{ blogCategories|length }}</span>
                    </div>
                    <p class="fw-light">Update and delete categories here</p>
                </div>

                {% include 'components/_button.html.twig' with {
                    typeButton: 'primary',
                    path: path('blog.create'),
                    textButton: 'New Category',
                    iconType: 'add',
                    iconColor: 'white',
                } %}
            </div>
        </div>

        {% for key,category in blogCategories %}
            <span>{{ category.name }}</span>
        {% endfor %}

    </div>


{% endblock %}
