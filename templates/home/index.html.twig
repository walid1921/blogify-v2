                                aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                                aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                                aria-label="Slide 3"></button>
                    </div>

                    {# CAROUSEL ITEMS #}
                    <div class="carousel-inner">
                        {% for slide in slides %}
                            <div class="carousel-item {{ loop.first ? 'active' : '' }}">
                                <div class="d-flex px-4 pb-5 flex-column justify-content-end blog-bg z-0"
                                     style="--bg-image: url('{{ asset(slide.bg) }}');
                                         --bg-image-hover: url('{{ asset(slide.bgHover) }}');">

                                    <div class="bg-layer base"></div>
                                    <div class="bg-layer hover"></div>
                                    <div class="overlay"></div>

                                    <div class="d-flex flex-column gap-3 z-1">
                                        <div class="d-flex align-items-center gap-2">
                                            <p class="fw-medium">{{ slide.category }}</p>
                                            <div class="w-100 bg-secondary" style="height: 1px;"></div>
                                        </div>

                                        <h3>{{ slide.title }}
                                            <small class="fw-normal text-secondary">- {{ slide.readTime }}</small>
                                        </h3>

                                        <p class="fw-light">{{ slide.content|u.truncate(140, '...') }}</p>

                                        <div class="d-flex justify-content-between gap-0 gap-md-3 mt-2 z-3">
                                            <div class="d-flex align-items-center gap-2">
                                                <p>{{ slide.author }}</p>
                                                <small class="fw-normal text-secondary">- {{ slide.date }}</small>
                                            </div>

                                            <a href="#"
                                               class="text-decoration-none link-underline-white align-items-center gap-2">
                                                Read more
                                                <i class="bi bi-chevron-right"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
