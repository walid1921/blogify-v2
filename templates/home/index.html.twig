{% block body %}

    {# Notifications #}
    <div class="notification-container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                {% include 'components/_toast.html.twig' with { type: label,  message: message } %}
            {% endfor %}
        {% endfor %}
    </div>

    <div class="page-container">

        {# Hero Section #}
        <section class="row g-3 g-md-0 align-items-stretch pt-3 w-100" data-test="hero">

            <div class="blog-header">
                <h1 class="text-uppercase" data-test="hero-heading">Blogs</h1>
                <p class="fw-light">I think in this page its not needed to have a header to find something else</p>
            </div>

            <div class="sticky-categories px-2 px-md-4 mb-2 mb-md-3">
                {% include 'components/_blogCategories.html.twig' %}
            </div>

            {# TOP LEFT BLOG #}
            <div
                class="col-12 col-md-5 p-0 pe-md-3 d-flex flex-column justify-content-between">

                <a href="{{ path('blog.one_blog', { id: blogHighlightedHome.id }) }}"
                   class="zoom-wrap position-relative blog-highlighted-image">
                    {% if blogHighlightedHome.coverImage %}
                        <img src="{{ asset('uploads/blogs/' ~ blogHighlightedHome.coverImage) }}"
                             alt="{{ blogHighlightedHome.title }}"
                             class="w-100 h-100 object-cover">
                    {% endif %}

                    {% if date(blogHighlightedHome.createdAt) > date('-7day') %}
                        <small class="new_blog_tag">New</small>
                    {% endif %}
                </a>

                <div class="px-4 d-flex flex-column justify-content-between gap-3 mt-4 ">

                    <div class="d-flex align-items-center gap-4">

                        <div class="d-flex align-items-center gap-2">
                            {% for category in blogHighlightedHome.categories %}
                                <span class="sm-medium text-secondary">
                                {{ category.name }}{% if not loop.last %},{% endif %}
                     </span>
                            {% endfor %}
                        </div>
                        <div class="w-100 bg-secondary" style="height: 1px;"></div>

                        {% include 'components/_likes.html.twig' with {
                            iconSize: 'fs-3',
                        } %}
                    </div>


                    <h3>{{ blogHighlightedHome.title }}
                        <small class="fw-normal text-secondary"> - {{ blogHighlightedHome.readTime }} min read</small>
                    </h3>

                    <p class="fw-light ">

                        {{ blogHighlightedHome.excerpt|striptags|u.truncate(100, '...') }}

                    </p>
                </div>
                <div class="px-4 d-flex justify-content-between gap-0 gap-md-3 mt-5">
                    <div class="d-flex align-items-center gap-2">

                        {% if blogHighlightedHome.author %}
                            <p>{{ blogHighlightedHome.author.username }}</p>
                        {% else %}
                            <p>Unknown</p>
                        {% endif %}

                        {{ include('components/_blogDate.html.twig', { createdAt: blogHighlightedHome.createdAt }) }}
                    </div>

                    <a href="{{ path('blog.one_blog', { id: blogHighlightedHome.id }) }}"
                       class="text-decoration-none  link-underline-black align-items-center gap-2">
                        Read more
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>


            {#            {{ include('components/_blogCard.html.twig', {blog: blogHighlightedHome}) }} #}


            {# Three most liked blogs from the list #}
            {# CAROUSEL #}
            <div
                class="col-12 col-md-7 d-flex flex-column justify-content-end p-0 blog-bg order-1 order-md-2"
                style="--bg-image: url('{{ asset('images/252-15041-4036_2.png') }}');
