{% extends 'base.html.twig' %}

{% block title %}
    {% if  app.request.attributes.get('_route') == 'userCreate' %}
        Create User
    {% elseif app.request.attributes.get('_route') == 'userEdit' %}
        Edit User
    {% endif %}
{% endblock %}

{% block body %}

    <div class="page-container">

        <div class="d-flex flex-column gap-2 gap-md-4">
            <div class="padding-header">
                {% include '/components/_button.html.twig' with {
                    typeButton: 'secondary',
                    path: 'javascript:history.back()',
                    iconType: 'back',
                    iconColor: 'black',
                } %}
            </div>


            <div class="blog-header">
                <h1 class="text-uppercase">
                    {% if  app.request.attributes.get('_route') == 'userCreate' %}
                        Create a New User
                    {% elseif app.request.attributes.get('_route') == 'userEdit' %}
                        Editing <span class="">{{ username }}'s</span> Profile
                    {% endif %}
                </h1>
            </div>
        </div>

        {{ include('components/_userForm.html.twig') }}
    </div>
{% endblock %}
